{
  "name": "npm-release-notifier",
  "version": "1.0.0",
  "description": "monitor npm package release",
  "type": "module",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "undici": "^4.16.0"
  },
  "devDependencies": {
    "autod": "^3.1.2",
    "egg-bin": "^4.18.1",
    "egg-ci": "^1.19.0",
    "eslint": "^8.11.0",
    "eslint-config-egg": "^11.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "autod": "autod",
    "lint": "eslint .",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "ci": "npm run lint && egg-bin pkgfiles --check && npm run cov"
  },
  "ci": {
    "version": "16",
    "type": "github"
  },
  "eslintIgnore": [
    "coverage",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:atian25/npm-release-notifier.git"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "author": "TZ <atian25@qq.com>",
  "license": "MIT"
}
